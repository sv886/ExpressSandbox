<% include partials/header %>

<h1>The Posts Page</h1>

<ul>
  <h2>for</h2>
  <% for(var i = 0; i < posts.length; i++){ %>
    <li>
      <%= posts[i].title %> by <strong><%= posts[i].author %></strong>
    </li>
  <% } %>

  <h2>forEach</h2>
  <% posts.forEach(function(post){ %>
    <li>
      <%= post.title %> by <strong><%= post.author %></strong>
    </li>
  <% }) %>
</ul>

